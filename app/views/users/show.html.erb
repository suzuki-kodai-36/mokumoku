<h1>プロフィール詳細</h1>



<% if current_user.present? && current_user != @user && current_user.following?(@user) %>
  <%= link_to user_relationships_path(@user.id), method: :delete do %>
    <button type="button" class="btn btn btn-danger">フォローを外す</button>
  <% end %>
<% elsif current_user.present? && current_user != @user %>
  <%= link_to user_relationships_path(@user.id), method: :post do %>
    <button type="button" class="btn btn btn-primary">フォローする</button>
  <% end %>
<% end %>
<br>
<br>
<h3>ユーザー名</h3>
<%= @user.name %>
<h3>メールアドレス</h3>
<%= @user.email %>
<h3>趣味</h3>
<%= @user.hobby%>
<h3>プロフィール</h3>
<%= @user.profile%>